<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/White"
    tools:context=".menu">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/blue_back"
        >
        <LinearLayout
            android:id="@+id/back"
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            >
            <ImageButton
                android:id="@+id/back_b"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/back"
                android:background="@android:color/transparent"
                android:layout_marginEnd="10dp"/>
            <TextView
                android:id="@+id/categoryTitle2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Menu"
                android:fontFamily="@font/poppins_extrabold"
                android:textSize="18sp"/>
        </LinearLayout>

    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:gravity="bottom"
        android:layout_margin="40dp"
        android:orientation="vertical">
        <Button
            android:id="@+id/aboutApp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/menu_but_back"
            android:text="About the app"
            android:paddingLeft="15dp"
            android:fontFamily="@font/poppins_medium"
            android:textAllCaps="false"
            android:gravity="left|center"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.6dp"
            android:background="@android:color/darker_gray"/>
        <Button
            android:id="@+id/contactMe"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/menu_but_back"
            android:text="Contact me"
            android:fontFamily="@font/poppins_medium"
            android:textAllCaps="false"
            android:paddingLeft="15dp"
            android:gravity="left|center"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="0.6dp"
            android:background="@android:color/darker_gray"
            android:layout_marginBottom="40dp"/>

        <Button
            android:id="@+id/shareApp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/menu_but_back"
            android:text="Share app"
            android:textAllCaps="false"
            android:fontFamily="@font/poppins_medium"
            android:paddingLeft="15dp"
            android:gravity="left|center"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.6dp"
            android:background="@android:color/darker_gray"/>
        <Button
            android:id="@+id/download"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/menu_but_back"
            android:text="Download source code"
            android:textAllCaps="false"
            android:fontFamily="@font/poppins_medium"
            android:paddingLeft="15dp"
            android:gravity="left|center"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.6dp"
            android:background="@android:color/darker_gray"/>



    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="top|right"

        android:orientation="horizontal">
        <ImageView
            android:id="@+id/behance"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/behance"
            android:background="@drawable/menu_but_back"
            android:layout_marginRight="7dp"/>
        <ImageView
            android:id="@+id/instagram"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/instagram"
            android:background="@drawable/menu_but_back"
            android:layout_marginRight="7dp"/>
        <ImageView
            android:id="@+id/facebook"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/facebook"
            android:background="@drawable/menu_but_back"
            android:layout_marginRight="7dp"/>
        <ImageView
            android:id="@+id/linkedin"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/linkedin"
            android:background="@drawable/menu_but_back"
            android:layout_marginRight="40dp"
            />




    </LinearLayout>

    <Button
        android:id="@+id/exit"
        android:layout_width="150dp"
        android:layout_height="55dp"
        android:background="@drawable/next_back"
        android:drawableLeft="@drawable/exit2"
        android:paddingLeft="30dp"
        android:fontFamily="@font/poppins_bold"
        android:drawablePadding="15dp"
        android:text="Exit"
        android:gravity="left|center"
        android:src="@drawable/exit2"/>

</LinearLayout>