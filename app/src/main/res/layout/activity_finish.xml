<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Light_brown"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="30dp"
    tools:context=".Finish">

    <com.airbnb.lottie.LottieAnimationView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        app:lottie_rawRes="@raw/finish"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        />
    <TextView
        android:id="@+id/titleFinish"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_bold"
        android:text="Payment successful"
        android:textSize="18sp"
        />
    <TextView
        android:id="@+id/descFinish"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_medium"
        android:text="Thank you for ordering ,your order will be shipped
within 24 hours ."
        android:layout_marginRight="25dp"
        android:layout_marginLeft="25dp"
        android:gravity="center"
        android:textSize="12sp"
        />
    <Button
        android:id="@+id/backToHome"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="50dp"
        android:layout_width="200dp"
        android:layout_height="45dp"
        android:background="@drawable/baktohome_but_back"
        android:text="Back to home"
        android:textColor="@color/Light_brown"
        android:fontFamily="@font/poppins_bold"
        android:textAllCaps="false"/>

</LinearLayout>