<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/Light_blue</item>
        <item name="colorPrimaryDark">#000</item>
        <item name="colorAccent">@color/Brown</item>
        <item name="android:textColor">@color/Brown</item>
        <item name="android:fontFamily">@font/poppins_semibold</item>
        <item name="android:windowActivityTransitions">true</item>
    </style>

    <style name="splash_screen" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/Light_blue</item>
        <item name="colorPrimaryDark">@color/White</item>
        <item name="colorAccent">@color/Brown</item>
        <item name="android:textColor">@color/Brown</item>
        <item name="android:fontFamily">@font/poppins_semibold</item>
        <item name="android:windowActivityTransitions">true</item>
    </style>

    <style name="splash_screen." parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/Light_blue</item>
        <item name="colorPrimaryDark">@color/Light_blue</item>
        <item name="colorAccent">@color/Brown</item>
        <item name="android:textColor">@color/Brown</item>
        <item name="android:fontFamily">@font/poppins_semibold</item>
        <item name="android:windowActivityTransitions">true</item>
    </style>

    <style name="DialogAnimation" >
        <item name="android:windowEnterAnimation" >@anim/scale_in</item>
        <item name="android:windowExitAnimation" >@anim/scale_out</item>
    </style>

</resources>
